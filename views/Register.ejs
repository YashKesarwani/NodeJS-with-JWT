<html>
    <head>
        <title>Register</title>    
    </head>
    <body style="margin: 0px;">
        <%- include ("partials/Header"); -%>        
        <div class="container-fluid">
            <div class="row mt-4">
                <div class="col-md-4 m-auto">
                  <div class="card card-body">
                    <h2 class="text-center mb-3"> <i class="fas fa-user-plus"></i> Register </h2>
                    <% if(typeof msg!='undefined') { %>
                      <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <%= msg %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                    <% } %>
                    <form action="/users/Register" method="POST">
                      <div class="form-group">
                        <label for="name">Name</label>
                        <input type="name" id="name" name="name" class="form-control" placeholder="Ex- John"
                          value="<%= typeof name != 'undefined' ? name : '' %>"
                        />
                      </div>
                      <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Ex- john@gmail.com"
                          value="<%= typeof email != 'undefined' ? email : '' %>"
                        />
                      </div>
                      <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Create Password"
                          value="<%= typeof password != 'undefined' ? password : '' %>"
                        />
                      </div>
                      <div class="form-group">
                        <label for="password2">Confirm Password</label>
                        <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
                          value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                        />
                      </div>
                      <button type="submit" class="btn btn-primary btn-block">
                        Register
                      </button>
                    </form>
                    <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
                  </div>
                </div>
            </div>
        </div>
        <div><br></div>
    </body>    
</html>
<%- include ("partials/Footer"); -%>   